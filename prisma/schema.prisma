generator client {
  provider = "prisma-client-js"
  //output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Product {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  price       Decimal
  stock       Int  
  createdAt   DateTime @default(now())

  category  Category @relation(fields: [categoryId], references: [id])
  categoryId Int

  mark   Mark @relation(fields: [markId], references: [id])
  markId Int
}

model Category {
  id   Int    @id @default(autoincrement())
  name String @unique // Category names should be unique

  // Back-relation to Product (Many-to-Many)
  // A category can have many products.
  products Product[]
}

model Mark {
  id   Int    @id @default(autoincrement())
  name String @unique 

  // Back-relation to Product (One-to-Many)
  // A mark can have many products.
  products Product[]
}
